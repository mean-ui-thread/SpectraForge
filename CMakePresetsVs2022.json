{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "include": [],
  "configurePresets": [
    {
      "name": "vs-17-2022",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/vs-17-2022",
      "toolchainFile": "${sourceDir}/cmake/toolchains/vs-17-2022-cxx17.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs-17-2022-debug",
      "configurePreset": "vs-17-2022",
      "configuration": "Debug"
    },
    {
      "name": "vs-17-2022-release",
      "configurePreset": "vs-17-2022",
      "configuration": "Release"
    },
    {
      "name": "vs-17-2022-profile",
      "configurePreset": "vs-17-2022",
      "configuration": "RelWithDebInfo"
    }
  ],
  "testPresets": [
    {
      "name": "vs-17-2022-debug",
      "configurePreset": "vs-17-2022",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "vs-17-2022-release",
      "configurePreset": "vs-17-2022",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "vs-17-2022-profile",
      "configurePreset": "vs-17-2022",
      "configuration": "RelWithDebInfo",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}