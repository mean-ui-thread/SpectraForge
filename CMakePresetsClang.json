{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "include": [],
  "configurePresets": [
    {
      "name": "ninja-clang",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/ninja-clang",
      "toolchainFile": "${sourceDir}/cmake/toolchains/ninja-clang-cxx17-c11.cmake"
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-clang-debug",
      "configurePreset": "ninja-clang",
      "configuration": "Debug"
    },
    {
      "name": "ninja-clang-release",
      "configurePreset": "ninja-clang",
      "configuration": "Release"
    },
    {
      "name": "ninja-clang-profile",
      "configurePreset": "ninja-clang",
      "configuration": "RelWithDebInfo"
    }
  ],
  "testPresets": [
    {
      "name": "ninja-clang-debug",
      "configurePreset": "ninja-clang",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "ninja-clang-release",
      "configurePreset": "ninja-clang",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "ninja-clang-profile",
      "configurePreset": "ninja-clang",
      "configuration": "RelWithDebInfo",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ]
}